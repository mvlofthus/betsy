<main>

  <h2>new category</h2>

  <%= form_with model: @cat, class: 'create-category', url: categories_path do |f| %>

    <div class="form-group">
    <label>category name</label>
    <%= f.text_field :name, class: "form-control" %>
    </div>

    <%= f.submit "add category", class:"btn btn-primary", data: {confirm: "are you sure?"}%>
  <% end %>

</main>

