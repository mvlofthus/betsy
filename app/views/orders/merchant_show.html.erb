<!--Merchants/Authenticated -->
<!--View an individual order to see the user's:-->
<!--Name-->
<!--Email address-->
<!--Mailing address-->
<!--Last four digits of their credit card-->
<!--Credit card expiration date-->

<main>
  <h2>order #<%= @order.id %></h2>

  <table class="table">
    <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th>mailing Address</th>
      <th>zip code</th>
      <th>last 4 digits of credit card</th>
      <th>credit card expiration date</th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.name %></td>
        <td><%= @order.email %></td>
        <td><%= @order.address %></td>
        <td><%= @order.zip_code %></td>
        <% if ! @order.credit_card_number.nil?  %>
          <td><%= @order.credit_card_number[-4..-1] %></td>
        <% end %>
        <td><%= @order.expiration_date %></td>
      </tr>
    </tbody>
  </table>
</main>