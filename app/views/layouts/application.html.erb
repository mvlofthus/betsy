<!DOCTYPE html>
<html>
  <head>
    <title>cactus&clover</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-dark bg-primary navbar-expand-md">
        <%= link_to  "cactus&clover", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ml-auto">
            <li class="navbar-item">
              <%= link_to "products", products_path, class: "nav-link" %>
            </li>
            <li class="navbar-item">
              <%= link_to "categories", categories_path, class: "nav-link" %></li>
            <li class="navbar-item">
              <%= link_to "merchants", merchants_path, class: "nav-link" %></li>
            <li class="navbar-item">
              <% if session[:user_id] %>
                <%= link_to "dashboard", dashboard_path, class: "nav-link" %>
              <% end %>
            </li>
            <li class="navbar-item">
              <%= link_to "cart", cart_path, class: "nav-link" %>
            </li>
            <li class="navbar-item">
              <% if session[:user_id] %>
                <%= link_to "log out", logout_path, method: "delete", class: "nav-link" %>
              <% else %>
                <%= link_to "login with github", github_login_path, class: "nav-link" %>
                <!-- < % = # link_to "login", login_path % > -->
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <section class="flash">
      <% flash.each do |name, message| %>
        <% if message.is_a?(Hash) %>
          <div class="alert-<%=name%>">
            <ul>
              <%message.each do |field, error| %>
                <li><%=field %>: <%= error.join(", ") %></li>
              <% end %>
            </ul>
          </div>
        <%else %>
        <div class="alert-<%=name%>"><%= message %></div>
        <%end %>
      <% end %>
    </section>

  <main>
    <%= yield %>
  </main>

  <footer>

  </footer>
  </body>
</html>
